{"ast":null,"code":"import LoveButton from './components/LoveButton.vue';\nimport LoginForm from './components/LoginForm.vue';\nimport MessageBoard from './components/MessageBoard.vue';\nimport { ref, onMounted } from 'vue';\nimport { incrementLove, getLoveCount } from './services/api.js';\nexport default {\n  name: 'App',\n  components: {\n    LoveButton,\n    LoginForm,\n    MessageBoard\n  },\n  setup() {\n    const currentUser = ref(localStorage.getItem('graceUsername'));\n    const loveCount = ref(0);\n    const showLoveMessage = ref(false);\n    const loadLoveCount = async () => {\n      try {\n        const count = await getLoveCount();\n        loveCount.value = count;\n      } catch (error) {\n        console.error('获取爱心计数失败:', error);\n      }\n    };\n    const handleLoveClick = async () => {\n      try {\n        const count = await incrementLove();\n        loveCount.value = count;\n        showLoveMessage.value = !showLoveMessage.value;\n      } catch (error) {\n        console.error('增加爱心计数失败:', error);\n      }\n    };\n    const handleLogin = username => {\n      currentUser.value = username;\n      localStorage.setItem('graceUsername', username);\n    };\n    const logout = () => {\n      localStorage.removeItem('graceUsername');\n      currentUser.value = null;\n    };\n    onMounted(() => {\n      loadLoveCount();\n    });\n    return {\n      currentUser,\n      loveCount,\n      showLoveMessage,\n      handleLoveClick,\n      handleLogin,\n      logout\n    };\n  }\n};","map":{"version":3,"names":["LoveButton","LoginForm","MessageBoard","ref","onMounted","incrementLove","getLoveCount","name","components","setup","currentUser","localStorage","getItem","loveCount","showLoveMessage","loadLoveCount","count","value","error","console","handleLoveClick","handleLogin","username","setItem","logout","removeItem"],"sources":["D:\\vue_project\\we-love-grace\\src\\App.vue"],"sourcesContent":["<template>\r\n  <div id=\"app\">\r\n    <div class=\"user-info\" 